  "shortcuts": [
    {
      "name": "RIX",
      "short_name": "RIX",
      "description": "Öffne RIX Chat",
      "url": "/dashboard/voice",
      "icons": [
        {
          "src": "/icons/chat-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Projekte",
      "short_name": "Projekte",
      "description": "Verwalte deine Projekte",
      "url": "/dashboard/projects",
      "icons": [
        {
          "src": "/icons/projects-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Routinen",
      "short_name": "Routinen",
      "description": "Verfolge deine Gewohnheiten",
      "url": "/dashboard/routines",
      "icons": [
        {
          "src": "/icons/routines-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Kalender",
      "short_name": "Kalender",
      "description": "Öffne den Smart Calendar",
      "url": "/dashboard/calendar",
      "icons": [
        {
          "src": "/icons/calendar-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-chat.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Chat Interface auf Desktop"
    },
    {
      "src": "/screenshots/mobile-dashboard.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Dashboard auf Mobile"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "rix",
      "url": "/dashboard/voice?action=%s"
    }
  ],
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate",
  "file_handlers": [
    {
      "action": "/dashboard/projects",
      "accept": {
        "text/plain": [".txt", ".md"]
      }
    }
  ],
  "share_target": {
    "action": "/dashboard/projects",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
} 